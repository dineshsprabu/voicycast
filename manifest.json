{
  "manifest_version": 2,
  "name": "VoicyCast",
  "description": "You choose, I will read it for you.",
  "version": "1.0",
  "browser_action": {
    "default_title": "Voicy Feed",
    "default_icon": {
        "19": "img/ext_icons/19.png",
        "38": "img/ext_icons/38.png"
    }
  },
  "background": {
    "page": "html/background.html",
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://cdn.rawgit.com/dineshsprabu/voicycast/master/chrome-extension/js/; object-src 'self'",
  "permissions": ["tabs", "storage", "geolocation", "http://*/*", "https://*/*"]
}